            <string>///point control

//find the river that this point belongs to
rivernum = obj_global.rivercount

//add 1 to point count for river number
obj_global.riverpointnum[rivernum] += 1
pointid = obj_global.riverpointnum[rivernum]
obj_global.riverpointx[rivernum,pointid] = x
obj_global.riverpointy[rivernum,pointid] = y

path_add_point(obj_global.river_path[rivernum],obj_global.riverpointx[rivernum,pointid],obj_global.riverpointy[rivernum,pointid],100)


//============ Setting corner angles =================
//angle
obj_global.riverpointangle[rivernum,pointid] = point_direction(obj_global.riverpointx[rivernum,pointid-1],obj_global.riverpointy[rivernum,pointid-1],x,y)

//set width points
//width = obj_global.width[rivernum]
obj_global.left_river_point_x[rivernum,pointid] = lengthdir_x( width/2, obj_global.riverpointangle[rivernum,pointid] -90)
obj_global.left_river_point_y[rivernum,pointid] = lengthdir_y( width/2, obj_global.riverpointangle[rivernum,pointid] -90)

obj_global.right_river_point_x[rivernum,pointid] = lengthdir_x( width/2, obj_global.riverpointangle[rivernum,pointid] +90)
obj_global.right_river_point_y[rivernum,pointid] = lengthdir_y( width/2, obj_global.riverpointangle[rivernum,pointid] +90)


//========= make previous corner face the new point /2 =============
if pointid -1 = 0{
    obj_global.riverpointangle[rivernum,pointid-1] = point_direction(obj_global.riverpointx[rivernum,pointid-1],obj_global.riverpointy[rivernum,pointid-1],x,y)
}
else{
    obj_global.riverpointangle[rivernum,pointid -1] -= angle_difference(obj_global.riverpointangle[rivernum,pointid -1],point_direction(obj_global.riverpointx[rivernum,pointid-1],obj_global.riverpointy[rivernum,pointid-1],x,y))/2
}

//set width points of previous corner again
obj_global.left_river_point_x[rivernum,pointid-1] = lengthdir_x( width/2, obj_global.riverpointangle[rivernum,pointid-1] -90)
obj_global.left_river_point_y[rivernum,pointid-1] = lengthdir_y( width/2, obj_global.riverpointangle[rivernum,pointid-1] -90)

obj_global.right_river_point_x[rivernum,pointid-1] = lengthdir_x( width/2, obj_global.riverpointangle[rivernum,pointid-1] +90)
obj_global.right_river_point_y[rivernum,pointid-1] = lengthdir_y( width/2, obj_global.riverpointangle[rivernum,pointid-1] +90)

//set colour and alpha
river_colour = obj_global.river_colour[rivernum]
river_alpha = obj_global.river_alpha[rivernum]
</string>
